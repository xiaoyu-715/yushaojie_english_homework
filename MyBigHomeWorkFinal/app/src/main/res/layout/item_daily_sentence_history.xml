<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024年1月20日"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_english_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Life is what happens to you while you're busy making other plans."
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tv_chinese_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="生活就是当你忙于制定其他计划时发生在你身上的事情。"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="—— John Lennon"
            android:textColor="@color/primary_blue"
            android:textSize="10sp"
            android:textStyle="italic" />

    </LinearLayout>

</androidx.cardview.widget.CardView>