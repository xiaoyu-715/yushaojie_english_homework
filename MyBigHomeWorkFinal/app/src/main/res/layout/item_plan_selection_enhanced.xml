<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:elevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- 左侧彩色指示条 -->
        <View
            android:id="@+id/priority_indicator"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@color/priority_high_indicator" />

        <!-- 主内容区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 顶部：CheckBox + 标题 + 编辑按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkbox_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:buttonTint="@color/primary" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:textColor="@color/text_title"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:lineSpacingExtra="2dp"
                    tools:text="考研词汇系统突破计划" />

                <ImageButton
                    android:id="@+id/btn_edit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="编辑"
                    android:src="@android:drawable/ic_menu_edit"
                    android:tint="@color/primary"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- 分类和优先级标签 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- 分类标签 -->
                <LinearLayout
                    android:id="@+id/category_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_category_tag"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:text="词汇" />
                </LinearLayout>

                <!-- 优先级标签 -->
                <LinearLayout
                    android:id="@+id/priority_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_priority_high"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_priority_icon"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/ic_priority_high_fire"
                        app:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/tv_priority"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:text="高优先级" />
                </LinearLayout>

            </LinearLayout>

            <!-- 描述 -->
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/text_description"
                android:textSize="14sp"
                android:lineSpacingExtra="3dp"
                android:maxLines="3"
                android:ellipsize="end"
                tools:text="第一阶段（1-2月）：基础巩固，每天记忆50个核心词汇。第二阶段（3-4月）：真题强化，攻克高频词汇。第三阶段（5-6月）：全面复习巩固。" />

            <!-- 展开按钮 -->
            <TextView
                android:id="@+id/btn_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="4dp"
                android:text="展开查看详情 ▼"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:padding="4dp"
                android:visibility="gone" />

            <!-- 分隔线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="40dp"
                android:background="@color/separator" />

            <!-- 时间范围和时长 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- 时间范围 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        app:tint="@color/text_meta" />

                    <TextView
                        android:id="@+id/tv_time_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:textColor="@color/text_meta"
                        android:textSize="12sp"
                        tools:text="2024-11至2025-05" />
                </LinearLayout>

                <!-- 每日时长 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@android:drawable/ic_menu_agenda"
                        app:tint="@color/text_meta" />

                    <TextView
                        android:id="@+id/tv_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:textColor="@color/text_meta"
                        android:textSize="12sp"
                        tools:text="60分钟/天" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>


