<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 顶部导航栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_back"
                android:contentDescription="返回"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="考试成绩"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue"
                android:gravity="center"/>

            <View
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        </LinearLayout>

        <!-- 总分卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_exam_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025年考研英语二"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_total_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="64sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_blue"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总分 / 75分"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tv_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优秀"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/correct_green"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="6dp"
                    android:background="@drawable/bg_exam_status_unfinished"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tv_accuracy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正确率: 0%"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用时: 2小时30分"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 各部分得分 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="各部分得分"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp"/>

        <!-- 完形填空得分 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="完形填空"
                    android:textSize="16sp"
                    android:textColor="#333333"/>

                <TextView
                    android:id="@+id/tv_cloze_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/10"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_blue"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tv_cloze_accuracy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(0/20)"
                    android:textSize="14sp"
                    android:textColor="#999999"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 阅读理解得分 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="阅读理解"
                    android:textSize="16sp"
                    android:textColor="#333333"/>

                <TextView
                    android:id="@+id/tv_reading_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/25"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_blue"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tv_reading_accuracy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(0/20)"
                    android:textSize="14sp"
                    android:textColor="#999999"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 新题型得分 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="新题型"
                    android:textSize="16sp"
                    android:textColor="#333333"/>

                <TextView
                    android:id="@+id/tv_newtype_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/10"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_blue"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tv_newtype_accuracy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(0/5)"
                    android:textSize="14sp"
                    android:textColor="#999999"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 翻译得分 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="翻译"
                        android:textSize="16sp"
                        android:textColor="#333333"/>

                    <TextView
                        android:id="@+id/tv_translation_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/15"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_blue"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_translation_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AI评语"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="8dp"
                    android:lineSpacingMultiplier="1.3"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 写作得分 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="写作"
                        android:textSize="16sp"
                        android:textColor="#333333"/>

                    <TextView
                        android:id="@+id/tv_writing_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/15"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_blue"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_writing_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AI评语"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="8dp"
                    android:lineSpacingMultiplier="1.3"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 操作按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_view_details"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="查看详情"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_option_default"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_add_to_wrong_questions"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="加入错题本"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_option_default"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_finish"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="完成"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_option_selected"/>
    </LinearLayout>
</ScrollView>

