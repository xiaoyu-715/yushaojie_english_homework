<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 计划头部信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- 状态指示器 -->
            <View
                android:id="@+id/view_status_indicator"
                android:layout_width="4dp"
                android:layout_height="24dp"
                android:background="@color/primary_blue"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_plan_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="英语四级词汇复习"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_plan_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="词汇训练"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:background="@drawable/bg_category_tag"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- 优先级标签 -->
            <TextView
                android:id="@+id/tv_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_priority_tag"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- 计划详情 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tv_plan_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="每天学习50个新单词，复习100个已学单词"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="8dp" />

            <!-- 时间信息 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_time"
                    app:tint="@color/text_secondary"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tv_plan_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2024-01-15 至 2024-02-15"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tv_plan_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30分钟/天"
                    android:textSize="12sp"
                    android:textColor="@color/info"
                    android:background="@drawable/bg_category_tag"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- 进度条 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="学习进度"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tv_progress_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15/30天"
                    android:textSize="12sp"
                    android:textColor="@color/primary_blue"
                    android:textStyle="bold" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_plan"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:progress="50"
                android:max="100"
                android:progressDrawable="@drawable/bg_progress_bar" />

        </LinearLayout>

        <!-- 操作按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/tv_plan_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="进行中"
                android:textSize="12sp"
                android:textColor="@color/success"
                android:gravity="start|center_vertical"
                android:drawableStart="@drawable/ic_status_active"
                android:drawablePadding="4dp" />

            <Button
                android:id="@+id/btn_continue_plan"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="继续学习"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_button_primary"
                android:paddingHorizontal="16dp"
                android:layout_marginStart="8dp" />

            <ImageView
                android:id="@+id/iv_plan_menu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_more"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                app:tint="@color/text_secondary"
                android:layout_marginStart="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>