<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingTop="4dp"
    android:paddingEnd="48dp"
    android:paddingBottom="4dp">

    <!-- 消息气泡 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="280dp"
            android:padding="12dp"
            android:textColor="#333333"
            android:textSize="16sp"
            tools:text="Hello! How can I help you?" />

    </androidx.cardview.widget.CardView>

    <!-- 时间戳 -->
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#999999"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/card_message"
        app:layout_constraintTop_toBottomOf="@+id/card_message"
        tools:text="14:30" />

    <!-- 生成学习计划按钮 -->
    <Button
        android:id="@+id/btn_generate_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/generate_study_plan"
        android:textSize="12sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/card_message"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>

