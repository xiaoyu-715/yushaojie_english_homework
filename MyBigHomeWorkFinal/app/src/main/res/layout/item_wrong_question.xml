<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 题目头部信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_question_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第1题"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_category_tag"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="词汇"
                android:textColor="@color/primary"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_wrong_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="错误 2 次"
                android:textColor="@color/error"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_wrong_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-01-15"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_mastered_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_check_circle"
                android:visibility="gone"
                app:tint="@color/success" />

        </LinearLayout>

        <!-- 题目内容 -->
        <TextView
            android:id="@+id/tv_question_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="4dp"
            android:text="The company's new policy will have a significant _______ on employee productivity."
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

        <!-- 选项区域 -->
        <LinearLayout
            android:id="@+id/layout_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_option_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_option_normal"
                android:padding="8dp"
                android:text="A. impact"
                android:textColor="@color/text_primary"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_option_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_option_normal"
                android:padding="8dp"
                android:text="B. compact"
                android:textColor="@color/text_primary"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_option_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_option_normal"
                android:padding="8dp"
                android:text="C. contact"
                android:textColor="@color/text_primary"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_option_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_option_normal"
                android:padding="8dp"
                android:text="D. contract"
                android:textColor="@color/text_primary"
                android:textSize="13sp" />

        </LinearLayout>

        <!-- 答案解析 -->
        <LinearLayout
            android:id="@+id/layout_explanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_explanation"
            android:orientation="vertical"
            android:padding="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="解析"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_explanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:lineSpacingExtra="2dp"
                android:text="impact意为影响，符合句意：公司的新政策将对员工生产力产生重大影响。"
                android:textColor="@color/text_primary"
                android:textSize="13sp" />

        </LinearLayout>

        <!-- 操作按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_show_explanation"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:text="查看解析"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_mark_mastered"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:text="标记掌握"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_mastered_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="已掌握"
                android:textColor="@color/success"
                android:textSize="12sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_remove"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="移除"
                android:textColor="@color/error"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>